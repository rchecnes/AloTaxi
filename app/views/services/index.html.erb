<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:phase) %></th>
      <th><%= model_class.human_attribute_name(:reserved_at) %></th>
      <th><%= model_class.human_attribute_name(:cancelled_at) %></th>
      <th><%= model_class.human_attribute_name(:scheduled_to) %></th>
      <th><%= model_class.human_attribute_name(:requested_to) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:ended_at) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:person_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_type_id) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:service_type_id) %></th>
      <th><%= model_class.human_attribute_name(:address_id) %></th>
      <th><%= model_class.human_attribute_name(:confirmed_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.id, service_path(service) %></td>
        <td><%= service.phase %></td>
        <td><%= service.reserved_at %></td>
        <td><%= service.cancelled_at %></td>
        <td><%= service.scheduled_to %></td>
        <td><%= service.requested_to %></td>
        <td><%= service.started_at %></td>
        <td><%= service.ended_at %></td>
        <td><%= service.price %></td>
        <td><%= service.person_id %></td>
        <td><%= service.payment_type_id %></td>
        <td><%= service.vehicle_id %></td>
        <td><%= service.service_type_id %></td>
        <td><%= service.address_id %></td>
        <td><%= service.confirmed_at %></td>
        <td><%=l service.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_service_path(service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      service_path(service),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_service_path,
            :class => 'btn btn-primary' %>
