<%- model_class = Service -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:person_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_type_id) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:service_type_id) %></th>
      <th><%= model_class.human_attribute_name(:address_id) %></th>
      <th><%=t '.actions', :default => t("helpers.Acciones") %></th>

      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Veh√≠culo</th>
      <th>Estado</th>
      <th>Precio</th>
      <th>Tipo de pago</th>
      <th>Acciones</th>

    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.id, service_path(service) %></td>
        <td><%= service.vehicle_id %></td>
        <td><%= service.phase %></td>
        <td><%= service.price %></td>
        <td><%= service.payment_type_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_service_path(service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      service_path(service),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_service_path,
            :class => 'btn btn-primary' %>
