<%= simple_form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="row">
      <div class="col-md-4">
        <div class="form-group right-space">
                <label for="">Fecha de servicio</label>
          <%= f.text_field :reserved_at, class: "form-control datepicker", 'data-provide': 'datepicker' %>
          <%= error_span(@service[:reserved_at]) %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group right-space">
          <label for="">Nro. Pasajeros</label>
          <%= f.text_field :requested_seats, class: "form-control" %>
          <%= error_span(@service[:requested_seats]) %>
        </div>
      </div>
      <div class="col-md-4">
          <%= f.association :vehicle, class: "form-control" %>
          <%= error_span(@service[:vehicle]) %>
      </div>
  </div>
  <div class="row">
      <div class="col-md-4">
        <%= f.association :payment_type %>
        <%= error_span(@service[:payment_type]) %>
      </div>
      <div class="col-md-4">
        <%= f.input :price %>
        <%= error_span(@service[:price]) %>
      </div>
      <div class="col-md-4">
        <%= f.association :service_type %>
        <%= error_span(@service[:service_type]) %>
      </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Dirección desde</label>
        <input class="form-control" type="text" name="direccion_origen" id="direccion_origen">
      </div>
    </div>
    <!--<div class="col-md-4">
      <%= f.input :to_address_id %>
      <%= error_span(@service[:to_address_id]) %>
    </div>-->
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Distrito origen</label>
        <select class="form-control" id="distrito_origen" name="distrito_origen">
          <% @districts.each do |distric| %>
            <option><%= distric.name %></optio>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Referencia</label>
        <input class="form-control" type="text" name="referencia_origen" id="referencia_origen">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label>&nbsp;</label><br>
        <%= link_to('#moda_favoritos', :class => 'btn btn-info', :'id' => "agregar_favoritos_origen", :'data-toggle'=>'modal') do %>
            <i class="fa fa-dashboard"> </i><span>Agregar de favorito</span>
        <% end %>
      </div>
  </div>
  <div class="row">
   <!--<div class="col-md-4">
      <%= f.input :from_address_id %>
      <%= error_span(@service[:from_address_id]) %>
    </div>-->
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Dirección hasta</label>
        <input class="form-control" type="text" name="direccion_hasta" id="direccion_destino">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Distrito origen</label>
        <select class="form-control" id="distrito_destino" name="distrito_destino">
          <% @districts.each do |distric| %>
            <option><%= distric.name %></optio>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="">Referencia</label>
        <input class="form-control" type="text" name="referencia_destino" id="referencia_destino">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label>&nbsp;</label><br>
        <%= link_to('#moda_favoritos', :class => 'btn btn-info', :'id' => "agregar_favoritos_origen", :'data-toggle'=>'modal') do %>
            <i class="fa fa-dashboard"> </i><span>Agregar de favorito</span>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'Add fovorites', list_favorite_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                services_path, :class => 'btn btn-default' %>
                
<% end %>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    **here comes whatever you want to show!**
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>

