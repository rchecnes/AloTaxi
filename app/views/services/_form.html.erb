<%= simple_form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :phase %>
  <%= error_span(@service[:phase]) %>
  <%= f.input :reserved_at %>
  <%= error_span(@service[:reserved_at]) %>
  <%= f.input :cancelled_at %>
  <%= error_span(@service[:cancelled_at]) %>
  <%= f.input :scheduled_to %>
  <%= error_span(@service[:scheduled_to]) %>
  <%= f.input :requested_to %>
  <%= error_span(@service[:requested_to]) %>
  <%= f.input :started_at %>
  <%= error_span(@service[:started_at]) %>
  <%= f.input :ended_at %>
  <%= error_span(@service[:ended_at]) %>
  <%= f.input :price %>
  <%= error_span(@service[:price]) %>
  <%= f.input :person_id %>
  <%= error_span(@service[:person_id]) %>
  <%= f.input :payment_type_id %>
  <%= error_span(@service[:payment_type_id]) %>
  <%= f.input :vehicle_id %>
  <%= error_span(@service[:vehicle_id]) %>
  <%= f.input :service_type_id %>
  <%= error_span(@service[:service_type_id]) %>
  <%= f.input :address_id %>
  <%= error_span(@service[:address_id]) %>
  <%= f.input :confirmed_at %>
  <%= error_span(@service[:confirmed_at]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                services_path, :class => 'btn btn-default' %>
<% end %>
