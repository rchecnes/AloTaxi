<%= simple_form_for @rate, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@rate[:name]) %>
  <%= f.input :price %>
  <%= error_span(@rate[:price]) %>
  <%= f.association :from_district %>
  <%= error_span(@rate[:from_district]) %>

 <%= f.association :to_district %>
  <%= error_span(@rate[:to_district]) %>
  
  <%= f.association :vehicle_type %>
  <%= error_span(@rate[:vehicle_type]) %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rates_path, :class => 'btn btn-default' %>
<% end %>
