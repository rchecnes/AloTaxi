<%= simple_form_for @rate, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@rate[:name]) %>
  <%= f.input :price %>
  <%= error_span(@rate[:price]) %>
  <%= f.input :district_id %>
  <%= error_span(@rate[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rates_path, :class => 'btn btn-default' %>
<% end %>
