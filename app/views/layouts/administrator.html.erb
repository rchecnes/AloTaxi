        <div id="page-wrapper">
            <div class="row" id="title-admin">
                <div class="col-lg-12 title-content"><h1><%= @title %></h1></div>
            </div>
            <div class="row" id="content-admin">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <%= bootstrap_flash %>
                        <%= yield %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var rol_id = <%= current_user.role.id %>;
        
        if(localStorage.getItem("menu_activo") == undefined || localStorage.getItem("menu_activo") =='' || rol_id != localStorage.getItem("rol_usuario")){
            if (rol_id == 1){
                localStorage.setItem("menu_activo", "list_menu_roles");
            }else if(rol_id == 2){
                localStorage.setItem("menu_activo", "list_service_operators");
            }else if(rol_id == 3){
                localStorage.setItem("menu_activo", "list_service_drivers");
            }else if(rol_id == 4){
                localStorage.setItem("menu_activo", "list_price_list_index");
            }
            
            localStorage.setItem("rol_usuario", rol_id);
        }
        
    
      $("ul.navbar-nav li").removeClass("active");
      $("ul.navbar-nav li#"+localStorage.getItem("menu_activo")).addClass("active");
    
      $(".navbar-nav li").click(function(){
        localStorage.setItem("menu_activo", $(this).attr('id'));
        $(".navbar-nav li").removeClass("active");
        $(this).addClass("active");
      });

  </script>
</body>
</html>
