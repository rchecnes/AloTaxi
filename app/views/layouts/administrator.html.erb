            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <% current_user.role.menu_roles.order(:position).each do |menu|%>
                    <!--menu.link.delete(' ').downcase!-->
                    
                        <li id="list_<%= menu.link.gsub("/", "_") %>">
                          <%= link_to('/'+menu.link, :class => '') do %>
                              <% icon = 'fa fa-bar-chart-o' %>
                              <% if menu.icon != ''%>
                                 <% icon = menu.icon %>
                              <% end %>
                              <i class="<%= icon %>"> </i><span>&nbsp;<%= menu.name%></span>
                          <% end %>
                        </li>
                    <% end %>
                </ul>
