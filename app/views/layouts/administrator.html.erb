                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                          <% if user_signed_in? %>
                            
                            <%= link_to(destroy_user_session_path, :method => :delete, :class => '') do %>
                              <i class="fa fa-fw fa-power-off"> </i><span> Sign Out</span>
