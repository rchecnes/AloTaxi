<%- model_class = Service -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:payment_type_id) %></th>
      <th><%= model_class.human_attribute_name(:to_address_id) %></th>
      <th><%= model_class.human_attribute_name(:from_address_id) %></th>
      <th><%= model_class.human_attribute_name(:service_type_id) %></th>
      <th><%= model_class.human_attribute_name(:phase) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.id %></td>
        <td><%= service.payment_type_id %></td>
        <td><%= service.to_address_id %></td>
        <td><%= service.from_address_id %></td>
        <td><%= service.service_type_id %></td>
        <td><%= service.phase %></td>
          <td>
        <%= link_to t('.accept', :default => t("helpers.links.Aceptar")),
                      service_drivers_index_path(service), :class => 'btn btn-primary' %> 
        <%= link_to t('.reject', :default => t("helpers.links.Rechazar")),
                      service_drivers_index_path(service), :class => 'btn btn-primary' %>              
        <%= link_to t('.start', :default => t("helpers.links.Empezar")),
                      service_drivers_index_path(service), :class => 'btn btn-primary' %>
        <%= link_to t('.terminate', :default => t("helpers.links.Terminar")),
                      service_drivers_index_path(service), :class => 'btn btn-primary' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

