<%= simple_form_for @vehicle, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@vehicle[:name]) %>
  <%= f.input :description %>
  <%= error_span(@vehicle[:description]) %>
  <%= f.input :seats_capacity %>
  <%= error_span(@vehicle[:seats_capacity]) %>
  <%= f.input :plate %>
  <%= error_span(@vehicle[:plate]) %>
  <%= f.input :year %>
  <%= error_span(@vehicle[:year]) %>
  <%= f.input :brand %>
  <%= error_span(@vehicle[:brand]) %>
  <%= f.input :soat %>
  <%= error_span(@vehicle[:soat]) %>
  <%= f.association :vehicle_type %>
  <%= error_span(@vehicle[:vehicle_type]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicles_path, :class => 'btn btn-default' %>
<% end %>
