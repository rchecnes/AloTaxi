<%= simple_form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@address[:description]) %>
  <%= f.input :state %>
  <%= error_span(@address[:state]) %>
  <%= f.input :reference %>
  <%= error_span(@address[:reference]) %>
  <%= f.association :district %><!--linea agregada emr-->
  <%= error_span(@address[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
<% end %>
